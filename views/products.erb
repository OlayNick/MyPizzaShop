<h2 align="center" >Какую пиццу желаете попробовать?</h2>

<div style="margin: auto" class="container">

	<div  class="row">
		<% @products.each do |pizza| %>
			  <div align="center" class="col-md-4">
			  	<a style="text-decoration: none" href="products/<%= pizza.id %>"><img src="<%= pizza.path_to_image %>" /><p style="font-size: 20px; color: #719b16; font-family: Comic Sans MS"><%= pizza.title %></p></a>
			  		<buttontype="submit"  class="btn btn-sm btn-success" onclick="add_to_cart(<%= pizza.id %>)">Add to cart</button>
			  </div>			  
		<% end %>
	</div>

</div>

