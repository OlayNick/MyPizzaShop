<h2>Your cart</h2>

<p> <%= @items %> </p>


<table class="table table-striped">
  <thead>
		<tr>
			<th>Наименование товара</th>
			<th>Стоимость</th>
			<th>Количество</th>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
			<tr>				
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
				<td><%= item[1] %></td>
			</tr>
		<% end %>
	</tbody>
</table>




